{
  "name": "alikhosravidev/laravel-verbose-validator",
  "description": "Adds a verbose/trace mode to the Laravel Validator for easier debugging of complex validation rules.",
  "keywords": [
    "laravel",
    "validation",
    "validator",
    "debug",
    "trace",
    "report",
    "errors",
    "testing",
    "package"
  ],
  "homepage": "https://github.com/alikhosravidev/laravel-verbose-validator",
  "type": "laravel-package",
  "license": "MIT",
  "authors": [
    {
      "name": "Ali Khosravi",
      "email": "alikhosravi175@gmail.com"
    }
  ],
  "require": {
    "php": "^8.3",
    "illuminate/support": "^12.0",
    "illuminate/validation": "^12.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0 || ^12.0",
    "orchestra/testbench": "^10.6",
    "laravel/pint": "^1.25"
  },
  "autoload": {
    "psr-4": {
      "Alikhosravidev\\VerboseValidator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Alikhosravidev\\VerboseValidator\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Alikhosravidev\\VerboseValidator\\VerboseValidatorServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
